class Person:
    def __init__(self, age):
        self._age = None 
        self.age = age   

    @property
    def age(self):
        return self._age

    @age.setter
    def age(self, value):
        if isinstance(value, int) and value > 0:
            self._age = value
        else:
            raise ValueError("Age must be a positive integer")

try:
    p1 = Person(20)
    print("Age:", p1.age)

    p1.age = 25
    print("Updated Age:", p1.age)

    p1.age = -5   
except ValueError as e:
    print(e)
