class Vehicle:
    def __init__(self, brand, fuel):
        self.brand = brand
        self.fuel = fuel

class Car(Vehicle):
    def __init__(self, brand, fuel, doors):
        super().__init__(brand, fuel)
        self.doors = doors

    def drive(self):
        if self.fuel > 0:
            self.fuel -= 1
            print(f"The {self.brand} car is driving. Fuel left: {self.fuel}")
        else:
            print("No fuel left! Please refuel.")

car1 = Car("Toyota", 5, 4)
car1.drive()
car1.drive()
